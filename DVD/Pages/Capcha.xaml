<Page x:Class="DVD.Pages.Capcha"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DVD.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Capcha">

    <Grid>
        <Grid>
            <StackPanel x:Name="SpCapch" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Canvas x:Name="cv"/>
        </Grid>
        <StackPanel>
            <Button x:Name="UpdCapch" Content="Обновить" Click="UpdCapch_Click"/>
            <TextBox x:Name="tbCapch"/>
            <Button x:Name="CheckCapch" Content="Проверить" Click="CheckCapch_Click"/>
        </StackPanel>

    </Grid>
</Page>
